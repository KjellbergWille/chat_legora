{
  "name": "legorachat",
  "private": true,
  "workspaces": ["server", "web"],
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently -n server,web -c blue,green \"pnpm dev:server\" \"pnpm dev:web\"",
    "build": "pnpm -r build",
    "start": "pnpm --filter server start"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
